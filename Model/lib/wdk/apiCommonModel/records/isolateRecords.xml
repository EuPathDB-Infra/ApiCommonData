<wdkModel>
    <recordClassSet name="IsolateRecordClasses">

      <recordClass idPrefix="" name="IsolateRecordClass" type="Isolate">

        <projectParamRef ref="recordParams.Project"/>

      <!-- =============================================================== -->
      <!--   Reporters -->
      <!-- =============================================================== -->

      <reporter name="tabular" displayName="Summary - TAB Delimited"
                implementation="org.gusdb.wdk.model.report.TabularReporter" />

      <!-- =================================================================== -->
      <!--  Attributes  ++++++++-->
      <!-- =================================================================== -->

      <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
      <!-- sequence attributes -->  
      <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

      <attributeQueryRef ref="IsolateAttributes.Sequence">
         <columnAttribute name="sequence" displayName="Sequence" internal="true" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="pcr_primers" displayName="PCR primer" internal="true" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="country" displayName="Country" internal="true" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="organism" displayName="Organism" internal="false" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="strain" displayName="Strain" internal="false" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="specific_host" displayName="Host" internal="false" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="isolation_source" displayName="Isolation Source" internal="false" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="description" displayName="Description" internal="false" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="query_name" displayName="Query Name" internal="true" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="target_name" displayName="Target Name" internal="false" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="min_subject_start" displayName="Target Start" internal="true" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="max_subject_end" displayName="Target End" internal="true" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="note" displayName="Note" internal="true" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="map" displayName="Mapping" internal="false" includeProjects="CryptoDB,ApiDB"/>
      </attributeQueryRef>

      <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
      <!-- Gene Product attributes -->  
      <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

      <attributeQueryRef ref="IsolateAttributes.Gene">
         <columnAttribute name="product" displayName="Product" internal="true" includeProjects="CryptoDB,ApiDB"/>
      </attributeQueryRef>

      <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
      <!-- Protein Sequence attributes -->  
      <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

      <attributeQueryRef ref="IsolateAttributes.ProteinSequence">
         <columnAttribute name="protein_sequence" displayName="Protein Sequence" internal="false" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="gene_description" displayName="Gene Description" internal="false" includeProjects="CryptoDB,ApiDB"/>
      </attributeQueryRef>

      <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
      <!-- Reference attributes -->  
      <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

      <attributeQueryRef ref="IsolateAttributes.Reference">
         <columnAttribute name="title" displayName="Title" internal="true" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="author" displayName="Author" internal="false" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="year" displayName="Year" internal="true" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="journal_or_book_name" displayName="Journal Name" internal="true" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="journal_vol" displayName="Volume" internal="true" includeProjects="CryptoDB,ApiDB"/>
         <columnAttribute name="journal_page" displayName="Page" internal="true" includeProjects="CryptoDB,ApiDB"/>
      </attributeQueryRef>


     <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
     <!-- Other Isolates Mapping table -->
     <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

     <table name="Mapping" includeProjects="CryptoDB,ApiDB"
            displayName="Isolates Mapping"
            queryRef="IsolateTables.Mapping">
        <columnAttribute displayName="Accession" name="name"/>
        <columnAttribute displayName="Organism" name="organism"/>
        <columnAttribute displayName="Strain" name="strain"/>
        <columnAttribute displayName="Host" name="specific_host"/>
     </table>

     <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
     <!-- overview -->
     <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
     <textAttribute name="overview" displayName="Overview"
          internal="true" inReportMaker="false">
          <text>
          <![CDATA[
           <table>
             <tr>
              <td width=18%>Isolate ID:</td>
              <td>$$primaryKey$$ <a href="http://www.ncbi.nlm.nih.gov/entrez/viewer.fcgi?db=nuccore&id=$$primaryKey$$" target=_blank><font size="-1">click here to Genbank</font></a></td>
             </tr>
             <tr>
              <td>Description:</td>
              <td>$$description$$</td>
             </tr>
             <tr>
              <td>Organism:</td>
              <td><i>$$organism$$</i></td>
             </tr>
             <tr>
              <td>Strain:</td>
              <td>$$strain$$</td>
             </tr>
             <tr>
              <td>Host:</td>
              <td>$$specific_host$$</td>
             </tr>
             <tr>
              <td>Product:</td>
              <td>$$product$$</td>
             </tr>
             <tr>
              <td>Note:</td>
              <td>$$note$$</td>
             </tr>
             <tr>
              <td>PCR Primer:</td>
              <td>$$pcr_primers$$</td>
             </tr>
             <tr>
              <td>Isolation Source:</td>
              <td>$$isolation_source$$</td>
             </tr>
           </table>
          ]]>
          </text>
     </textAttribute>

     <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
     <!-- attribution -->
     <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
     <textAttribute name="attribution" displayName="Attribution"
          internal="true" inReportMaker="false">
          <text>
          <![CDATA[
           <table>
             <tr>
              <td>Title:</td>
              <td>$$title$$</td>
             </tr>
             <tr>
              <td>Authors:</td>
              <td>$$author$$</td>
             </tr>
             <tr>
              <td>Journal:</td>
              <td>$$journal_or_book_name$$ $$journal_vol$$ $$journal_page$$ $$year$$</td>
             </tr>
           </table>
          ]]>
          </text>
     </textAttribute>

     </recordClass>

  </recordClassSet>
</wdkModel>

