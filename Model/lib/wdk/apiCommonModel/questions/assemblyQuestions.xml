<wdkModel>
  <questionSet name="AssemblyQuestions" displayName="Search EST Assemblies">

  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
  <!-- By Id -->
  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

  <question name="AssembliesByEstAccession"
              displayName="ID"
              queryRef="AssemblyIds.AssembliesByEstAccession"
              recordClassRef="AssemblyRecordClasses.AssemblyRecordClass"
              noSummaryOnSingleRecord="true" includeProjects="CryptoDB, ToxoDB">

        <attributesList
           summary="organism,location_text,est_count,length"
           sorting="organism asc,est_count desc"
        />
        <summary>
        Find EST Clusters by EST accession
        </summary>

        <description>
          <![CDATA[
            Find EST Clusters by EST accession
          ]]>
        </description>

       <propertyList name="genomeAttribution">
          <value/>
       </propertyList>
       <propertyList name="specificAttribution">
           <value includeProjects="ToxoDB">dbEST</value>
           <value includeProjects="CryptoDB">CparvumESTs</value>
           <value includeProjects="CryptoDB">WatanabeCpHNJ-1_EstLibrary</value>
           <value includeProjects="CryptoDB">dbEST</value>
          
       </propertyList>

  </question>


  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
  <!-- By Library -->
  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

  <question name="AssembliesByLibrary"
              category="Transcript Expression"
              displayName="Library"
              queryRef="AssemblyIds.AssembliesByLibrary"
              recordClassRef="AssemblyRecordClasses.AssemblyRecordClass">

        <summary>Find EST Assemblies by Library Name</summary>
        <description>Find EST Assemblies by Library Name</description>

        <attributesList includeProjects="CryptoDB,ToxoDB"
              summary="organism, est_count, est_library_count"
              sorting="organism asc, est_count desc, est_library_count desc"
        />

       <propertyList name="genomeAttribution">
          <value/>
       </propertyList>
       <propertyList name="specificAttribution">
           <value includeProjects="ToxoDB,CryptoDB">dbEST</value>
           <value includeProjects="CryptoDB">CparvumESTs</value>
           <value includeProjects="CryptoDB">WatanabeCpHNJ-1_EstLibrary</value>
       </propertyList>

        <dynamicAttributes>
          <columnAttribute name="est_library_count" displayName="ESTs from Libraries" align="center"/>
        </dynamicAttributes>
  </question>

  </questionSet>

</wdkModel>
