    <question name="SnpsByAlleleFrequency" includeProjects="ApiDB,PlasmoDB"
              category="Other Attributes"
              displayName="Allele Frequency"
              queryRef="SnpsBy.SnpsByAlleleFrequency"
              recordClassRef="SnpRecordClasses.SnpRecordClass">
        <attributesList
              summary="snp_location,major_allele_count,major_strains,major_allele,major_product,minor_allele_count,minor_strains,minor_alleles,minor_products,linkedGeneId,position_in_protein"
              sorting="snp_location asc"
        />
        <summary>
            <![CDATA[
            Find SNPs by the frequency of the major and minor alleles
            ]]>
        </summary>

