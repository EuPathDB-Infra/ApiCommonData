<wdkModel>

  <questionSet name="GenomicSequenceQuestions">

    <!-- ************************************************************ -->
    <!-- SourceId -->  
    <!-- ************************************************************ -->
    
    <question name="SequenceBySourceId"
      category="Other Attributes"
      displayName="Genomic Sequence ID"
      queryRef="GenomicSequenceIds.SequenceBySourceId"
      recordClassRef="SequenceRecordClasses.SequenceRecordClass">
         
      <attributesList 
        summary="organism"
      />
      
      <summary>
        Find genomic sequences by ID.
      </summary>

      <description includeProjects="CryptoDB">
        Find genomic sequences (contigs) by ID.
      </description>
      <description includeProjects="PlasmoDB,ToxoDB,ApiDB">
        Find genomic sequences (chromosomes or contigs) by ID.
      </description>
      <suggest includeProjects="ApiDB"
        sample="AAEL010000057, AAEE01000009, BX526834, MAL4, Ia"
      />
    </question>
    
    
    <!-- ************************************************************ -->
    <!-- Species -->  
    <!-- ************************************************************ -->
    
    <question name="SequencesByTaxon"
      category=""
      displayName="Species"
      queryRef="SequenceIds.SequencesByTaxon"
      recordClassRef="SequenceRecordClasses.SequenceRecordClass">
      
      <attributesList 
        summary="organism"
        sorting=""
      />
      
      <summary>
        Find genomic sequences of a species.
      </summary>

      <description includeProjects="CryptoDB">
        Find genomic sequences (contigs) for one or more species.
      </description>
      <description includeProjects="PlasmoDB,ToxoDB,ApiDB">
        Find genomic sequences (chromosomes or contigs) for one or more species.
      </description>
    </question>
    
    
    <!-- ************************************************************ -->
    <!-- Similarity -->  
    <!-- ************************************************************ -->
  
    <question name="SequencesBySimilarity"
      category="Similarity/Pattern"
      displayName="BLAST"
      queryRef="SequenceIds.SequencesBySimilarity"
      recordClassRef="SequenceRecordClasses.SequenceRecordClass">
      
      <attributesList 
        summary="Header,TabularRow,Alignment,Footer"
      />
      
      <summary>
        Find genomic sequences that have BLAST similarity to your input sequence.
      </summary>
      <description includeProjects="CryptoDB,ApiDB">
        <![CDATA[
        This query finds <b>contigs</b> with BLAST matches to an input sequence. 
        The <a href="http://blast.wustl.edu/" target="_blank">WU BLAST</a> program is used to 
        search against coding nucleotide (CDS) or  protein sequence from annotatated gene models.
        ]]>
      </description>
      <description includeProjects="PlasmoDB, ToxoDB">
        <![CDATA[
        Find genomic sequences that have BLAST similarity to your input sequence.
        <p>The search uses <a href="http://www.ncbi.nlm.nih.gov/BLAST/">NCBI BLAST</a>.
        ]]>
      </description>

    </question>
    
    
  </questionSet>
</wdkModel>
