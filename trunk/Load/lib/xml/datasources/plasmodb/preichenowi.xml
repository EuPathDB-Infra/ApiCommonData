<resources>
  <resource plugin="GUS::Supported::Plugin::dbEST"
            resource="Pr_dbEST_RSRC"
            version="@@Pr_dbEST_VER@@">
    <manualGet fileOrDir="global/empty" />
    <pluginArgs>--span 500 --taxonFile @@dataDir@@/taxonIdFile --extDbName %RESOURCE_NAME% --extDbRlsVer %RESOURCE_VERSION% --soVer @@SO_VER@@ --dbestLoginFile @@dataDir@@/dbest.prop --dbestConnect @@dbestConnect@@ </pluginArgs>
    <unpack>getSubTaxa --ncbiTaxId 5854 --outputFile @@dataDir@@/taxonIdFile</unpack>
    <unpack>createPropFile --file @@dataDir@@/dbest.prop --propList "dbestLogin:@@dbestLogin@@,dbestPswd:@@dbestPswd@@"</unpack>
  </resource>
  <resource plugin="GUS::Supported::Plugin::LoadFastaSequences"
            resource="Preichenowi_Contigs_RSRC"
            version="@@Preichenowi_Contigs_VER@@">
    <pluginArgs>--externalDatabaseName %RESOURCE_NAME% --ncbiTaxId 5854 --externalDatabaseVersion %RESOURCE_VERSION% --sequenceFile @@dataDir@@/P.reichenowi.contigs_fixed/P_reichenowi.contigs.031104 --SOTermName 'contig'  --regexSourceId  '>(\S+)' --tableName "DoTS::ExternalNASequence"</pluginArgs>
    <unpack>mkdir @@dataDir@@/P.reichenowi.contigs_fixed</unpack>
    <unpack>cat @@dataDir@@/P_reichenowi.contigs.031104 | perl -pe 's/>/>Pr_/' > @@dataDir@@/P.reichenowi.contigs_fixed/P_reichenowi.contigs.031104</unpack>
    <wgetArgs url="ftp://ftp.sanger.ac.uk/pub/pathogens/P_reichenowi/P_reichenowi.contigs.031104">--tries=5 --mirror --no-parent --no-directories --no-host-directories --cut-dirs=3 --output-document=@@dataDir@@/P_reichenowi.contigs.031104</wgetArgs>
  </resource>
</resources>
