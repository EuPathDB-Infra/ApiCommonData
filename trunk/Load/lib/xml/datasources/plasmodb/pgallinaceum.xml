<resources>
  <resource plugin="GUS::Supported::Plugin::dbEST"
            resource="Pg_dbEST_RSRC"
            version="@@Pg_dbEST_VER@@">
    <manualGet fileOrDir="global/empty" />
    <pluginArgs>--span 500 --taxonFile @@dataDir@@/taxonIdFile --extDbName %RESOURCE_NAME% --extDbRlsVer %RESOURCE_VERSION% --soVer @@SO_VER@@ --dbestLoginFile @@dataDir@@/dbest.prop --dbestConnect @@dbestConnect@@ </pluginArgs>
    <unpack>getSubTaxa --ncbiTaxId 5849 --outputFile @@dataDir@@/taxonIdFile</unpack>
    <unpack>createPropFile --file @@dataDir@@/dbest.prop --propList "dbestLogin:@@dbestLogin@@,dbestPswd:@@dbestPswd@@"</unpack>
  </resource>
  <resource plugin="GUS::Supported::Plugin::LoadFastaSequences"
            resource="Pgallinaceum_Contigs_RSRC"
            version="@@Pgallinaceum_Contigs_VER@@">
    <pluginArgs>--externalDatabaseName %RESOURCE_NAME% --ncbiTaxId 5849 --externalDatabaseVersion %RESOURCE_VERSION% --sequenceFile @@dataDir@@/P.gallinaceum.contigs_fixed/P_gallinaceum.contigs.123106 --SOTermName 'contig'  --regexSourceId  '>(\S+)' --tableName "DoTS::ExternalNASequence"</pluginArgs>
    <unpack>mkdir @@dataDir@@/P.gallinaceum.contigs_fixed</unpack>
    <unpack>cat @@dataDir@@/P_gallinaceum.contigs.123106 | perl -pe 's/>/>Pg_/' > @@dataDir@@/P.gallinaceum.contigs_fixed/P_gallinaceum.contigs.123106</unpack>
    <wgetArgs url="ftp://ftp.sanger.ac.uk/pub/pathogens/Plasmodium/gallinaceum/P_gallinaceum.contigs.123106">--tries=5 --mirror --no-parent --no-directories --no-host-directories --cut-dirs=4 --output-document=@@dataDir@@/P_gallinaceum.contigs.123106</wgetArgs>
  </resource>
</resources>
