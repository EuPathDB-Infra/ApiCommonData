      <externalTuningTableDependency name="apidb.GeneAttributes"/>

      <source dblink="CRYPTO"/>
      <source dblink="GIARDIA"/>
      <source dblink="PLASMO"/>  
      <source dblink="TOXO"/>  
      <source dblink="TRITRYP"/>  

      <source>
        <query> 
          <![CDATA[ 
            select gi.id,gi.gene  
