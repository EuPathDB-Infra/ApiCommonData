<workflowGraph name="psipredWorkflow">

    <param name="nrdbFileShortDefline"/>
    <param name="proteinsFile"/>
    <param name="parentDataDir"/>

    <constant name="dataDir">$$parentDataDir$$/psipred</constant>

    <constant name="psipredProteinsFile">$$dataDir$$/proteinsFixedIds.fsa</constant>
    <constant name="psipredNrdbFile">$$dataDir$$/nrdb.pfilt.fsa</constant>

    <step name="makeDataDir" stepClass="ApiCommonData::Load::WorkflowSteps::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>

    <step name="runPfilt" stepClass="ApiCommonData::Load::WorkflowSteps::RunPfilt">
      <paramValue name="inputFile">$$nrdbFileShortDefline$$</paramValue>
      <paramValue name="outputFile">$$psipredNrdbFile$$</paramValue>
    </step>

    <step name="fixProteinIds" stepClass="ApiCommonData::Load::WorkflowSteps::FixProteinIdsForPsipred">
      <paramValue name="inputProteinsFile">$$proteinsFile$$</paramValue>
      <paramValue name="outputProteinsFile">$$psipredProteinsFile$$</paramValue>
      <depends name="makeDataDir"/>
    </step>

    <step name="createTaskDir" stepClass="ApiCommonData::Load::WorkflowSteps::MakePsipredTaskDir">
      <paramValue name="taskInputDir">$$dataDir$$/input</paramValue>
      <paramValue name="proteinsFile">$$psipredProteinsFile$$</paramValue>
      <paramValue name="nrdbFile">$$psipredNrdbFile$$</paramValue>
      <depends name="fixProteinIds"/>
    </step>

    <step name="mirrorToCluster" stepClass="ApiCommonData::Load::WorkflowSteps::MirrorToComputeCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$</paramValue>
      <depends name="createTaskDir"/>
    </step>

    <step name="runClusterTask" stepClass="ApiCommonData::Load::WorkflowSteps::RunAndMonitorClusterTask" stepLoadTypes="cluster">
      <paramValue name="taskInputDir">$$dataDir$$/input</paramValue>
      <paramValue name="numNodes">40</paramValue>
      <paramValue name="processorsPerNode">4</paramValue>
      <depends name="mirrorToCluster"/>
    </step>

    <step name="mirrorFromCluster" stepClass="ApiCommonData::Load::WorkflowSteps::MirrorFromComputeCluster">
      <paramValue name="fileOrDirToMirror">$$dataDir$$/master</paramValue>
      <paramValue name="outputDir">$$dataDir$$/master/mainresult</paramValue>
      <paramValue name="outputFiles"></paramValue>
      <depends name="runClusterTask"/>
    </step>

    <step name="fixFileNames" stepClass="ApiCommonData::Load::WorkflowSteps::FixPsipredFileNames">
      <paramValue name="inputDir">$$dataDir$$/master/mainresult</paramValue>
      <paramValue name="outputDir">$$dataDir$$/master/mainresult_fixed</paramValue>
      <depends name="mirrorFromCluster"/>
     </step>

    <step name="makeAlgInv" stepClass="ApiCommonData::Load::WorkflowSteps::MakeAlgInv">
      <paramValue name="algName">psipred</paramValue>
      <paramValue name="algVersion">dontcare</paramValue>
      <paramValue name="algDesc">dontcare</paramValue>
      <paramValue name="algResult">dontcare</paramValue>
      <depends name="fixFileNames"/>
    </step>

    <step name="insertPsipred" stepClass="ApiCommonData::Load::WorkflowSteps::LoadSecondaryStructures">
      <paramValue name="algName">psipred</paramValue>
      <paramValue name="inputDir">$$dataDir$$/master/mainresult_fixed</paramValue>
      <depends name="makeAlgInv"/>
    </step>

</workflowGraph>
