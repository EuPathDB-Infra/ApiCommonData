<resources>

  <resource resource="OrthoMCL_Phyletic_RSRC" version="@@OrthoMCL_VER@@"
      plugin="ApiCommonData::Load::Plugin::InsertPhylogeneticProfile">
    <manualGet fileOrDir="common/orthology/orthoMCL/%RESOURCE_VERSION%/orthomclGroups.txt"/>
    <pluginArgs>--groupsFile @@dataDir@@/orthomclGroups.txt</pluginArgs>
    <info
        displayName="OrthoMCL phyletic profiles"
        project="TriTrypDB"
        organisms="@@AllOrganismNames@@"
        category="Proteome"
        publicUrl="http://orthomcl.cbil.upenn.edu"
        contact="Deborah Pinney"
        email="pinney@@pcbi.upenn.edu"
        institution="PCBI">
      <description>
        <![CDATA[
         OrthoMCL data in a phyletic profile format. Contact: Steve Fischer </tt>
        ]]>
      </description>
    <publication pmid="16381887"/>
    </info>
  </resource>

  <resource resource="OrthoMCL_RSRC" version="@@OrthoMCL_VER@@"
      plugin="ApiCommonData::Load::Plugin::InsertOrthologousGroups">
    <manualGet fileOrDir="common/orthology/orthoMCL/%RESOURCE_VERSION%/orthomclGroups.txt"/>
    <pluginArgs>--OrthologFile @@dataDir@@/orthomclGroups.txt --AnalysisName 'OrthoMCL-based Orthology Predictions' --AnalysisDescription 'OrthoMCL-based Orthology Predictions' --ElementResultTable "DoTS::GeneFeature"</pluginArgs>
    <info
        displayName="Orthologous groups generated using OrthoMCL"
        project="TriTrypDB"
        organisms="@@AllOrganismNames@@"
        category="Proteome"
        publicUrl="http://orthomcl.cbil.upenn.edu"
        contact="Deborah Pinney"
        email="pinney@@pcbi.upenn.edu"
        institution="PCBI">
      <description>
        <![CDATA[
         OrthoMCL-based orthologous predictions for proteins were generated by Steve Fischer and Deborah Pinney (EuPathDB team) as described in Chen et al. Nucleic Acids Research 2006.
        ]]>
      </description>
    <publication pmid="12952885"/>
    </info>
  </resource>

  <resource resource="OrthoMCLTree_RSRC" version="@@OrthoMCL_VER@@"
      plugin="ApiCommonData::Load::Plugin::InsertOrthomclTaxon">
    <manualGet fileOrDir="common/orthology/orthoMCL/%RESOURCE_VERSION%/orthomclClades.txt"/>
    <pluginArgs>--cladeFile @@dataDir@@/%RESOURCE_VERSION%/orthomclClades.txt --speciesFile @@dataDir@@/%RESOURCE_VERSION%/orthomclTaxons.txt </pluginArgs>
    <info
        displayName="OrthoMCL phyletic pattern tree"
        project="TriTrypDB"
        organisms="@@AllOrganismNames@@"
        category="Proteome"
        publicUrl="http://orthomcl.cbil.upenn.edu"
        contact="Deborah Pinney"
        email="pinney@@pcbi.upenn.edu"
        institution="PCBI">
      <description>
        <![CDATA[
         Phyletic pattern tree for the organisms used in OrthoMCL.
        ]]>
      </description>
    </info>
  </resource>


</resources>
