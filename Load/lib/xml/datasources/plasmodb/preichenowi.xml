<resourcesPipeline>

    <resource resource="dbEST" version="2009-02-23"
        plugin="GUS::Supported::Plugin::dbEST"
        displayName="Plasmodium dbEST ESTs"
        category="Transcriptome"
        publicUrl="http://www.ncbi.nlm.nih.gov/dbEST/">
        <manualGet fileOrDir = "common/empty"
        />
        <unpack>getSubTaxa --ncbiTaxId 5854 --outputFile @dataDir@/taxonIdFile</unpack>
        <unpack>createPropFile --file @dataDir@/dbest.prop --propList "dbestLogin:@dbestLogin@,dbestPswd:@dbestPswd@"</unpack>
        <pluginArgs>--span 500 --taxonFile @dataDir@/taxonIdFile --extDbName %EXT_DB_NAME% --extDbRlsVer %EXT_DB_RLS_VER% --soVer @soVer@ --dbestLoginFile @dataDir@/dbest.prop --dbestConnect "dbi:Oracle:musbld" </pluginArgs>
        <description>
            <![CDATA[
                  Plasmodium ESTs from dbEST.
          ]]>
        </description>
    </resource>


    <resource resource="P.reichenowi.contigs" version="2004-03-11" 
        url="ftp://ftp.sanger.ac.uk/pub/pathogens/P_reichenowi/P_reichenowi.contigs.031104"
        plugin="GUS::Supported::Plugin::LoadFastaSequences"
        organisms="P.reichenowi"
        displayName="P. reichenowi contigs"
        category="Genome">
        <wgetArgs>--tries=5 --mirror --no-parent --no-directories --no-host-directories --cut-dirs=3 --output-document=P_reichenowi.contigs.031104</wgetArgs> 
        <unpack>mkdir @dataDir@/P.reichenowi.contigs_fixed</unpack>
        <unpack>cat @dataDir@/P.reichenowi.contigs/P_reichenowi.contigs.031104 | perl -pe 's/>/>Pr_/' > @dataDir@/P.reichenowi.contigs_fixed/P_reichenowi.contigs.031104</unpack>
        <pluginArgs>--externalDatabaseName %EXT_DB_NAME% --ncbiTaxId 5854 --externalDatabaseVersion %EXT_DB_RLS_VER% --sequenceFile @dataDir@/P.reichenowi.contigs_fixed/P_reichenowi.contigs.031104 --SOTermName 'contig'  --regexSourceId  '>(\S+)' --tableName "DoTS::ExternalNASequence"</pluginArgs>
        <description>
            <![CDATA[ 
                 Contig sequences for <i>P. reichenowi</i> obtained from the Pathogen Sequencing Unit at the Wellcome Trust Sanger Institute
          ]]>      
        </description>  
    </resource>
    
 <resource resource="sangerReichenowiSnps" version="2006-10-21"
        plugin="ApiCommonData::Load::Plugin::LoadNothing"
        displayName="P. reichenowi SNPs, Wellcome Trust Sanger Institute"
        category="Polymorphisms"
        publicUrl="http://www.sanger.ac.uk/Projects/Pathogens/"
        organisms="P.falciparum">	
        <manualGet fileOrDir="PlasmoDB/preichenowi/SNP/sanger/2006-10-21/sangerPReichenowiSnps.tar.gz"
            contact="Matt Berriman"
            email="mb4@sanger.ac.uk"
            institution="Sanger PSU"
        />
        <unpack>currDir=`pwd`; cd @dataDir@; tar -xzf sangerPReichenowiSnps.tar.gz; cd $currDir</unpack>
        <unpack>sangerSnps2Gff.pl --sf @dataDir@/WTSI_PFAL.Preich.0.dbsnp.new --cf @dataDir@/Preich.uniq.hq.nr3.gff.ORA --s Sanger --r 3D7 > @dataDir@/sangerPreichenowiSnps.gff</unpack>
        <pluginArgs>--dbRefExternalDatabaseSpec "%EXT_DB_NAME%|%EXT_DB_RLS_VER%"</pluginArgs>
        <description>
            <![CDATA[
Based on whole genome sequence for P. reichenowi_Oscar
          ]]>
        </description>	
	<publication pmid="17159978"/> 
    </resource> 

</resourcesPipeline>
