

    <resource resource="Pr_dbEST_RSRC" version="2009-02-23"
       project="PlasmoDB"
        plugin="GUS::Supported::Plugin::dbEST"
        displayName="Plasmodium dbEST ESTs"
        category="Transcriptome"
        publicUrl="http://www.ncbi.nlm.nih.gov/dbEST/">
        <manualGet fileOrDir = "common/empty"
        />
        <unpack>getSubTaxa --ncbiTaxId 5854 --outputFile @dataDir@/taxonIdFile</unpack>
        <unpack>createPropFile --file @dataDir@/dbest.prop --propList "dbestLogin:@dbestLogin@,dbestPswd:@dbestPswd@"</unpack>
        <pluginArgs>--span 500 --taxonFile @dataDir@/taxonIdFile --extDbName %RESOURCE_NAME% --extDbRlsVer %RESOURCE_VERSION% --soVer @soVer@ --dbestLoginFile @dataDir@/dbest.prop --dbestConnect "dbi:Oracle:musbld" </pluginArgs>
        <description>
            <![CDATA[
                  Plasmodium ESTs from dbEST.
          ]]>
        </description>
    </resource>


    <resource resource="P.reichenowi.contigs_RSRC" version=@prContigVer@ 
       project="PlasmoDB"
        url="ftp://ftp.sanger.ac.uk/pub/pathogens/P_reichenowi/P_reichenowi.contigs.031104"
        plugin="GUS::Supported::Plugin::LoadFastaSequences"
        organisms="P.reichenowi"
        displayName="P. reichenowi contigs"
        category="Genome">
        <wgetArgs>--tries=5 --mirror --no-parent --no-directories --no-host-directories --cut-dirs=3 --output-document=P_reichenowi.contigs.031104</wgetArgs> 
        <unpack>mkdir @dataDir@/P.reichenowi.contigs_fixed</unpack>
        <unpack>cat @dataDir@/P.reichenowi.contigs/P_reichenowi.contigs.031104 | perl -pe 's/>/>Pr_/' > @dataDir@/P.reichenowi.contigs_fixed/P_reichenowi.contigs.031104</unpack>
        <pluginArgs>--externalDatabaseName %RESOURCE_NAME% --ncbiTaxId 5854 --externalDatabaseVersion %RESOURCE_VERSION% --sequenceFile @dataDir@/P.reichenowi.contigs_fixed/P_reichenowi.contigs.031104 --SOTermName 'contig'  --regexSourceId  '>(\S+)' --tableName "DoTS::ExternalNASequence"</pluginArgs>
        <description>
            <![CDATA[ 
                 Contig sequences for <i>P. reichenowi</i> obtained from the Pathogen Sequencing Unit at the Wellcome Trust Sanger Institute
          ]]>      
        </description>  
    </resource>
    

