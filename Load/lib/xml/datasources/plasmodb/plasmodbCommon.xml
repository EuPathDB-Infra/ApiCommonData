<resources>
  <resource resource="PlasmodiumGenbankIsolates_RSRC" version="@@PlasmodiumGenbankIsolates_VER@@"
      plugin="GUS::Supported::Plugin::InsertSequenceFeatures">
    <manualGet fileOrDir="PlasmoDB/common/isolate/plasmoIsolatesFromGenbank/%RESOURCE_VERSION%/sequences.gb"/>
    <unpack>fixIsolateSequences --seq_file @@dataDir@@/sequences.gb --fixed_seq_file @@dataDir@@/sequences_fixed.gb --removed_seq_file @@dataDir@@/sequences_excluded.gb</unpack>
    <pluginArgs>--extDbName %RESOURCE_NAME% --extDbRlsVer %RESOURCE_VERSION% --mapFile @@gusHome@@/lib/xml/isf/PlasmoDB/plasmoIsolatesGenbank2gus.xml --inputFileOrDir @@dataDir@@/sequences_fixed.gb --fileFormat genbank --soCvsVersion @@SO_VER@@ --defaultOrganism "Plasmodium falciparum"  --seqSoTerm "region" --bioperlTreeOutput @@dataDir@@/bioperlTree.out</pluginArgs>
    <info
        displayName="Plasmodium isolates from Genbank"
        project="PlasmoDB"
        organisms="@@PlasmoOrganismNames@@"
        category="Genome"
        publicUrl=""
        contact="GenBank"
        email="info@@ncbi.nlm.nih.gov"
        institution="NCBI">
      <description>
        <![CDATA[
         Plasmodium isolates from Genbank
        ]]>
      </description>
    </info>
  </resource>

  <resource resource="isolateVocabularyMap_RSRC" version="2010-07-26"
      plugin="ApiCommonData::Load::Plugin::InsertIsolateVocabMapping">
    <manualGet fileOrDir="PlasmoDB/common/isolate/isolate_ontology/%RESOURCE_VERSION%/"/>
    <pluginArgs>--geographicXmlFile @@dataDir@@/%RESOURCE_VERSION%/geographicLocation.xml  --sourceXmlFile @@dataDir@@/%RESOURCE_VERSION%/isolationSource.xml --hostXmlFile @@dataDir@@/%RESOURCE_VERSION%/specificHost.xml --productXmlFile @@dataDir@@/%RESOURCE_VERSION%/products.xml</pluginArgs>
    <info
        displayName="Insert mappings between isolates and controlled vocabularies"
        project="PlasmoDB"
        organisms="@@PlasmoOrganismNames@@"
        category="ignore"
        publicUrl=""
        contact="Bindu Gajria"
        email="bindu@@pcbi.upenn.edu"
        institution="University of Pennsylvania">
      <description>
        <![CDATA[
         
        ]]>
      </description>
    </info>
  </resource>

  <resource resource="BibRefType_RSRC" version="1"
      plugin="GUS::Supported::Plugin::LoadGusXml">
    <manualGet fileOrDir="PlasmoDB/common/misc/BibliographicReferenceType/%RESOURCE_VERSION%/ncbiPublicationTypes.xml"/>
    <pluginArgs>--filename @@dataDir@@/ncbiPublicationTypes.xml</pluginArgs>
    <info
        displayName="Bibliographic Reference Types"
        project="PlasmoDB"
        organisms="@@PlasmoOrganismNames@@"
        category="ignore"
        publicUrl="http://www.nlm.nih.gov/mesh/pubtypes2006.html"
        contact="John Brestelli"
        email="jbrestel@@pcbi.upenn.edu"
        institution="University of Pennsylvania">
      <description>
        <![CDATA[
         
        ]]>
      </description>
    </info>
  </resource>

  <resource resource="OrthoMCL_Phyletic_RSRC" version="4"
      plugin="ApiCommonData::Load::Plugin::InsertPhylogeneticProfile">
    <manualGet fileOrDir="PlasmoDB/common/orthology/orthoMCL/%RESOURCE_VERSION%/orthomclGroups.txt"/>
    <pluginArgs>--groupsFile @@dataDir@@/orthomclGroups.txt --taxaToLoad "pber,pcha,pfal,pkno,pviv,pyoe"</pluginArgs>
    <info
        displayName="OrthoMCL phyletic profiles"
        project="PlasmoDB"
        organisms="@@PlasmoOrganismNames@@"
        category="Proteome"
        publicUrl="http://orthomcl.cbil.upenn.edu"
        contact="Deborah Pinney"
        email="pinney@@pcbi.upenn.edu"
        institution="PCBI">
      <description>
        <![CDATA[
         OrthoMCL data in a phyletic profile format. Contact: Steve Fischer </tt>
        ]]>
      </description>
    <publication pmid="16381887"/>
    </info>
  </resource>

  <resource resource="OrthoMCL_RSRC" version="4"
      plugin="ApiCommonData::Load::Plugin::InsertOrthologousGroups">
    <manualGet fileOrDir="PlasmoDB/common/orthology/orthoMCL/%RESOURCE_VERSION%/orthomclGroups.txt"/>
    <pluginArgs>--OrthologFile @@dataDir@@/orthomclGroups.txt --AnalysisName 'OrthoMCL-based Orthology Predictions' --AnalysisDescription 'OrthoMCL-based Orthology Predictions'  --taxaToLoad "pber,pcha,pfal,pkno,pviv,pyoe" --ElementResultTable "DoTS::GeneFeature"</pluginArgs>
    <info
        displayName="Orthologous groups generated using OrthoMCL"
        project="PlasmoDB"
        organisms="@@PlasmoOrganismNames@@"
        category="Proteome"
        publicUrl="http://orthomcl.cbil.upenn.edu"
        contact="Deborah Pinney"
        email="pinney@@pcbi.upenn.edu"
        institution="PCBI">
      <description>
        <![CDATA[
         OrthoMCL-based orthologous predictions for proteins were generated by Steve Fischer and Deborah Pinney (EuPathDB team) as described in Chen et al. Nucleic Acids Research 2006.
        ]]>
      </description>
    <publication pmid="12952885"/>
    </info>
  </resource>

  <resource resource="OrthoMCLTree_RSRC" version="4"
      plugin="ApiCommonData::Load::Plugin::InsertOrthomclTaxon">
    <manualGet fileOrDir="PlasmoDB/common/phylogeny/OrthoMCLTaxon/%RESOURCE_VERSION%/"/>
    <pluginArgs>--cladeFile @@dataDir@@/%RESOURCE_VERSION%/orthomclClades.txt --speciesFile @@dataDir@@/%RESOURCE_VERSION%/orthomclTaxons.txt </pluginArgs>
    <info
        displayName="OrthoMCL phyletic pattern tree"
        project="PlasmoDB"
        organisms="@@PlasmoOrganismNames@@"
        category="Proteome"
        publicUrl="http://orthomcl.cbil.upenn.edu"
        contact="Deborah Pinney"
        email="pinney@@pcbi.upenn.edu"
        institution="PCBI">
      <description>
        <![CDATA[
         Phyletic pattern tree for the organisms used in OrthoMCL.
        ]]>
      </description>
    </info>
  </resource>

  <resource resource="RodentPlasmodiumChromosomes_RSRC" version="2007-09-24"
      plugin="ApiCommonData::Load::Plugin::UpdateRodentPlasmodiumChromosomes">
    <manualGet fileOrDir="PlasmoDB/pfalciparum/comparativeGenomics/taco_RMP/%RESOURCE_VERSION%/RMP_Pf_fromKooij.txt"/>
    <pluginArgs>--mappingFile @@dataDir@@/RMP_Pf_fromKooij.txt --extDbNames "yoelii-falciparum synteny from Mercator,berghei-falciparum synteny from Mercator" --addChrColorTable 1 </pluginArgs>
    <info
        displayName="Assignment of chromosome numbers to rodent malaria parasite contigs"
        project="PlasmoDB"
        organisms="@@PfOrganismFullName@@"
        category="Genome"
        publicUrl=""
        contact=""
        email=""
        institution="">
      <description>
        <![CDATA[
         Assignment of chromosome numbers to rodent malaria parasite (RMP) contigs 
                           using Taco Kaoij's RMP genome mapping of <i>P. falciparum</i> genes and Mercator synteny data.
        ]]>
      </description>
    </info>
  </resource>

</resources>
