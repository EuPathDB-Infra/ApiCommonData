<resources>
  <resource plugin="GUS::Supported::Plugin::InsertSequenceFeatures"
            resource="PlasmodiumGenbankIsolates_RSRC"
            version="@@PlasmodiumGenbankIsolates_VER@@">
    <manualGet fileOrDir="PlasmoDB/common/isolate/plasmoIsolatesFromGenbank/%RESOURCE_VERSION%/sequences.gb" />
    <pluginArgs>--extDbName %RESOURCE_NAME% --extDbRlsVer %RESOURCE_VERSION% --mapFile @@gusHome@@/lib/xml/isf/PlasmoDB/plasmoIsolatesGenbank2gus.xml --inputFileOrDir @@dataDir@@/sequences_fixed.gb --fileFormat genbank --soCvsVersion @@SO_VER@@ --defaultOrganism "Plasmodium falciparum"  --seqSoTerm "region" --bioperlTreeOutput @@dataDir@@/bioperlTree.out</pluginArgs>
    <unpack>fixIsolateSequences --seq_file @@dataDir@@/sequences.gb --fixed_seq_file @@dataDir@@/sequences_fixed.gb --removed_seq_file @@dataDir@@/sequences_excluded.gb</unpack>
  </resource>
  <resource plugin="ApiCommonData::Load::Plugin::InsertIsolateVocabMapping"
            resource="isolateVocabularyMap_RSRC"
            version="2010-07-26">
    <manualGet fileOrDir="PlasmoDB/common/isolate/isolate_ontology/%RESOURCE_VERSION%/" />
    <pluginArgs>--geographicXmlFile @@dataDir@@/%RESOURCE_VERSION%/geographicLocation.xml  --sourceXmlFile @@dataDir@@/%RESOURCE_VERSION%/isolationSource.xml --hostXmlFile @@dataDir@@/%RESOURCE_VERSION%/specificHost.xml --productXmlFile @@dataDir@@/%RESOURCE_VERSION%/products.xml</pluginArgs>
  </resource>
  <resource plugin="GUS::Supported::Plugin::LoadGusXml"
            resource="BibRefType_RSRC"
            version="1">
    <manualGet fileOrDir="PlasmoDB/common/misc/BibliographicReferenceType/%RESOURCE_VERSION%/ncbiPublicationTypes.xml" />
    <pluginArgs>--filename @@dataDir@@/ncbiPublicationTypes.xml</pluginArgs>
  </resource>
  <resource plugin="ApiCommonData::Load::Plugin::InsertPhylogeneticProfile"
            resource="OrthoMCL_Phyletic_RSRC"
            version="4">
    <manualGet fileOrDir="PlasmoDB/common/orthology/orthoMCL/%RESOURCE_VERSION%/orthomclGroups.txt" />
    <pluginArgs>--groupsFile @@dataDir@@/orthomclGroups.txt --taxaToLoad "pber,pcha,pfal,pkno,pviv,pyoe"</pluginArgs>
  </resource>
  <resource plugin="ApiCommonData::Load::Plugin::InsertOrthologousGroups"
            resource="OrthoMCL_RSRC"
            version="4">
    <manualGet fileOrDir="PlasmoDB/common/orthology/orthoMCL/%RESOURCE_VERSION%/orthomclGroups.txt" />
    <pluginArgs>--OrthologFile @@dataDir@@/orthomclGroups.txt --AnalysisName 'OrthoMCL-based Orthology Predictions' --AnalysisDescription 'OrthoMCL-based Orthology Predictions'  --taxaToLoad "pber,pcha,pfal,pkno,pviv,pyoe" --ElementResultTable "DoTS::GeneFeature"</pluginArgs>
  </resource>
  <resource plugin="ApiCommonData::Load::Plugin::InsertOrthomclTaxon"
            resource="OrthoMCLTree_RSRC"
            version="4">
    <manualGet fileOrDir="PlasmoDB/common/phylogeny/OrthoMCLTaxon/%RESOURCE_VERSION%/" />
    <pluginArgs>--cladeFile @@dataDir@@/%RESOURCE_VERSION%/orthomclClades.txt --speciesFile @@dataDir@@/%RESOURCE_VERSION%/orthomclTaxons.txt </pluginArgs>
  </resource>
  <resource plugin="ApiCommonData::Load::Plugin::UpdateRodentPlasmodiumChromosomes"
            resource="RodentPlasmodiumChromosomes_RSRC"
            version="2007-09-24">
    <manualGet fileOrDir="PlasmoDB/pfalciparum/comparativeGenomics/taco_RMP/%RESOURCE_VERSION%/RMP_Pf_fromKooij.txt" />
    <pluginArgs>--mappingFile @@dataDir@@/RMP_Pf_fromKooij.txt --extDbNames "yoelii-falciparum synteny from Mercator,berghei-falciparum synteny from Mercator" --addChrColorTable 1 </pluginArgs>
  </resource>
</resources>
