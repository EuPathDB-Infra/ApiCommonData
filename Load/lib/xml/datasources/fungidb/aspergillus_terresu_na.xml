<!-- Aspergillus terresu (unknown strain) Resources -->
<resources>

     <!-- ISF FASTA resource -->
     <resource 
            resource="aspergillus_terreus_na_genome_sequence_RSRC"
            version="@@aspergillus_terreus_na_VER@@"
            plugin="GUS::Supported::Plugin::LoadFastaSequences">
          
            <!-- Transforming upstream of ISF/workflow... -->   
            <manualGet 
              fileOrDir="FungiDB/aspergillus_terreus_na/genome/%RESOURCE_VERSION%/aspergillus_terreus_na_supercontigs.uniquified.fasta"/>

            <!-- or within the workflow iteself... -->
            <!--
            <manualGet 
              fileOrDir="FungiDB/aspergillus_terreus_na/genome/%RESOURCE_VERSION%/aspergillus_terreus_na_supercontigs.fasta"/>
             <unpack>
                  fungidb_uniquify_and_standardize_seqids.pl
                      --input  @@dataDir@@/aspergillus_terreus_na_supercontigs.fasta
                      --output @@dataDir@@/aspergillus_terreus_na_supercontigs_uniquified.fasta
                      --prefix @@aspergillus_terreus_na_ORGANISM_ABBREVIATION@@
             </unpack>
             -->

            <pluginArgs>
                   --externalDatabaseName %RESOURCE_NAME%
                   --ncbiTaxId @@aspergillus_terreus_na_NCBI_TAXONOMY_ID@@
                   --externalDatabaseVersion %RESOURCE_VERSION%
                   --sequenceFile @@dataDir@@/aspergillus_terreus_na_supercontigs_uniquified.fasta
                   --SOTermName 'chromosome'  
                   --regexSourceId  '>(\S+)' 
                   --tableName "DoTS::ExternalNASequence" 
                   --regexChromosome '\d+\.(\d+)' 
             </pluginArgs>

             <info
                   displayName="Aspergillus terreus (unknown strain) genomic sequence"
                   project="FungiDB"
                   organisms="@@aspergillus_terreus_na_ORGANISM_FULL_NAME@@"
                   category="Genome"
                   publicUrl="http://www.broadinstitute.org/annotation/genome/aspergillus_group/MultiDownloads.html"
                   contact=""
                   email=""
                   institution="The Broad Institute">
          
                   <description>
                          <![CDATA[
                              Aspergillus terreus (unknown strain) genomic sequence. Source: The Broad Institute
                          ]]>
                   </description>
          </info>
  </resource>

  <!-- ISF genome annotations -->
  <resource 
         resource="aspergillus_terreus_na_genome_annotations_RSRC"
         version="@@aspergillus_terreus_na_GENOME_SEQUENCE_VER@@" 
         parentResource="aspergillus_terreus_na_genome_sequence_RSRC"
         plugin="GUS::Supported::Plugin::InsertSequenceFeatures">

         <!-- Transforming upstream of ISF/workflow... -->   
         <manualGet fileOrDir="FungiDB/aspergillus_terreus_na/genome/%RESOURCE_VERSION%/aspergillus_terreus_na_transcripts.transformed.gff3" />

        <!-- or within the workflow iteself... -->
        <!--
         <manualGet fileOrDir="FungiDB/aspergillus_terreus_na/genome/%RESOURCE_VERSION%/aspergillus_terreus_na_transcripts.gff3" />
        <unpack>
               fungidb_uniquify_and_standardize_seqids.pl
                   --input  @@dataDir@@/aspergillus_terreus_na_transcripts.gff3
                   --output @@dataDir@@/aspergillus_terreus_na.uniquified.gff3
                   --prefix @@aspergillus_terreus_na_ORGANISM_ABBREVIATION@@
        </unpack>

         <unpack>
               preprocessGFF3 
                   --input_gff  @@dataDir@@/aspergillus_terreus_na.uniquified.gff3
                   --output_gff @@dataDir@@/aspergillus_terreus_na.transformed.gff3
         </unpack>
         -->

         <pluginArgs>
                --extDbName %PARENT_RESOURCE_NAME%
                --extDbRlsVer %PARENT_RESOURCE_VERSION%
                --mapFile @@gusHome@@/lib/xml/isf/FungiDB/broadGFF32Gus.xml
                --inputFileOrDir @@dataDir@@/aspergillus_terreus_na.transformed.gff3
                --inputFileExtension "gff3"
                --fileFormat gff3
                --soCvsVersion @@SO_VER@@
                --defaultOrganism "Aspergillus terreus"
                --seqSoTerm "chromosome"
                --validationLog @@dataDir@@/validation.log
                --bioperlTreeOutput @@dataDir@@/bioperlTree.out
                --seqIdColumn source_id
                --naSequenceSubclass ExternalNASequence
            </pluginArgs>

            <info
                displayName="Aspergillus terreus genomic annotations"
                project="FungiDB"
                organisms="@@aspergillus_terreus_na_ORGANISM_FULL_NAME@@"
                category="Genome"
                publicUrl="http://www.broadinstitute.org/annotation/genome/aspergillus_group/MultiDownloads.html"
                contact=""
                email=""
                institution="The Broad Institute">

                <description>
                     <![CDATA[
                      Aspergillus terreus genomic annotations. Source: The Broad Institute.
                      ]]>
                </description>
            </info>
  </resource>


 <!-- //////////////////////
           ALIASES
       ////////////////////// -->

  <resource resource="aspergillus_terreus_na_primary_gene_aliases_RSRC" 
            version="@@aspergillus_terreus_na_VER@@"
            plugin="ApiCommonData::Load::Plugin::InsertNaFeatureNaGene">
 
    <manualGet fileOrDir="FungiDB/aspergillus_terreus_na/genome/%RESOURCE_VERSION%/primary_gene_aliases.tab"/>
    <pluginArgs>--MappingFile @@dataDir@@/primary_gene_aliases.tab</pluginArgs>
    <info
        displayName="Mapping of FungiDB IDs to original gene names."
        project="FungiDB"
        organisms="@@aspergillus_terreus_na_ORGANISM_FULL_NAME@@"
        category="ignore"
        publicUrl=""
        contact=""
        email=""
        institution="">
      <description>
        <![CDATA[
         
        ]]>
      </description>
    </info>
  </resource>

 
  <!-- dbEST -->
  <resource resource="aspergillus_terreus_na_dbEST_RSRC" version="@@aspergillus_terreus_na_DBEST_VER@@"
                                                          plugin="GUS::Supported::Plugin::dbEST">
    <manualGet fileOrDir="global/empty"/>
    <unpack>getSubTaxa --ncbiTaxId @@aspergillus_terreus_na_NCBI_TAXONOMY_ID@@ --outputFile @@dataDir@@/taxonIdFile</unpack>
    <unpack>createPropFile --file  @@dataDir@@/dbest.prop --propList "dbestLogin:@@dbestLogin@@,dbestPswd:@@dbestPswd@@"</unpack>
    <pluginArgs>--span 500 
                --taxonFile @@dataDir@@/taxonIdFile 
                --extDbName %RESOURCE_NAME% 
                --extDbRlsVer %RESOURCE_VERSION%
                --soVer @@SO_VER@@
                --dbestLoginFile @@dataDir@@/dbest.prop 
                --dbestConnect @@dbestConnect@@
    </pluginArgs>

    <info
        displayName="Aspergillus terreus dbEST ESTs"
        project="FungiDB"
        organisms="@@aspergillus_terreus_na_ORGANISM_FULL_NAME@@"
        category="Transcriptome"
        publicUrl="http://www.ncbi.nlm.nih.gov/dbEST/"
        contact=""
        email=""
        institution="">
      <description>
        <![CDATA[
         Aspergillus terreus ESTs from dbEST.
        ]]>
      </description>
    </info>
  </resource>




</resources>
