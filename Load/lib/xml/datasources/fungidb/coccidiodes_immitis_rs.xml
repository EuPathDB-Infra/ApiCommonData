<!-- Coccidioides immitis (RS) -->
<resources>

     <!-- ISF FASTA resource -->
     <resource 
            resource="coccidiodes_immitis_rs_genome_sequence_RSRC"
            version="@@coccidiodes_immitis_rs_VER@@"
            plugin="GUS::Supported::Plugin::LoadFastaSequences">
            
            <manualGet fileOrDir="FungiDB/coccidiodes_immitis_rs/genome/%RESOURCE_VERSION%/coccidiodes_immitis_rs_supercontigs.fasta" />

             <!-- Standardize scaffold IDs by prefixing -->
             <unpack>
                   fungidb_uniquify_and_standardize_seqids.pl
                   --input  @@dataDir@@/coccidiodes_immitis_rs_supercontigs.fasta
                   --output @@dataDir@@/coccidiodes_immitis_rs_supercontigs.uniquified.fasta
                   --prefix @@coccidiodes_immitis_rs_ORGANISM_ABBREVIATION@@
             </unpack>

            <pluginArgs>
                   --externalDatabaseName %RESOURCE_NAME%
                   --ncbiTaxId @@coccidiodes_immitis_rs_NCBI_TAXON_ID@@
                   --externalDatabaseVersion %RESOURCE_VERSION% 
                   --sequenceFile @@dataDir@@/coccidiodes_immitis_rs_supercontigs.uniquified.fasta 
                   --SOTermName 'chromosome'  
                   --regexSourceId  '>(\S+)' 
                   --tableName "DoTS::ExternalNASequence" 
                   --regexChromosome '\d+\.(\d+)' 
             </pluginArgs>

             <info
                   displayName="Coccidiodes immitis (RS) genomic sequence"
                   project="FungiDB"
                   organisms="@@coccidiodes_immitis_rs_ORGANISM_FULL_NAME@@"
                   category="Genome"
                   publicUrl="http://www.broadinstitute.org/annotation/genome/coccidioides_group/MultiDownloads.html"
                   contact=""
                   email=""
                   institution="The Broad Institute">
          
                   <description>
                          <![CDATA[
                              Coccidiodes immitis (RS) genomic sequence. Source: The Broad Institute
                          ]]>
                   </description>
          </info>
  </resource>

  <!-- ISF genome annotations -->
  <resource 
         resource="coccidiodes_immitis_rs_genome_annotations_RSRC"
         version="@@coccidiodes_immitis_rs_VER@@"
         parentResource="coccidiodes_immitis_rs_genome_sequence_RSRC"
         plugin="GUS::Supported::Plugin::InsertSequenceFeatures">

         <manualGet fileOrDir="FungiDB/coccidiodes_immitis_rs/genome/%RESOURCE_VERSION%/coccidiodes_immitis_rs_transcripts.gff3"/> 

          <!-- Standardize scaffold IDs by prefixing -->
          <unpack>
                fungidb_uniquify_and_standardize_seqids.pl
                --input  @@dataDir@@/coccidiodes_immitis_rs_transcripts.gff3
                --output @@dataDir@@/coccidiodes_immitis_rs_transcripts.uniquified.gff3
                --prefix @@coccidiodes_immitis_rs_ORGANISM_ABBREVIATION@@
          </unpack>

         <unpack>
             preprocessGFF3 
                --input_gff @@dataDir@@/coccidiodes_immitis_rs_transcripts.uniquified.gff3
                --output_gff @@dataDir@@/coccidiodes_immitis_rs.transformed.gff3
         </unpack>

         <pluginArgs>
                --extDbName %PARENT_RESOURCE_NAME%
                --extDbRlsVer %PARENT_RESOURCE_VERSION%
                --mapFile @@gusHome@@/lib/xml/isf/FungiDB/broadGFF32Gus.xml
                --inputFileOrDir @@dataDir@@/coccidiodes_immitis_rs.transformed.gff
                --inputFileExtension "gff3"
                --fileFormat gff3
                --soCvsVersion @@SO_VER@@
                --defaultOrganism "Coccidiodes immitis RS"
                --seqSoTerm "chromosome"
                --validationLog @@dataDir@@/validation.log
                --bioperlTreeOutput @@dataDir@@/bioperlTree.out
                --seqIdColumn source_id
                --naSequenceSubclass ExternalNASequence
            </pluginArgs>

            <info
                displayName="Coccidiodes immitis (RS) genomic annotations"
                project="FungiDB"
                organisms="@@coccidiodes_immitis_rs_ORGANISM_FULL_NAME@@"
                category="Genome"
                publicUrl="http://www.broadinstitute.org/annotation/genome/coccidioides_group/MultiDownloads.html"
                contact=""
                email=""
                institution="The Broad Institute">

                <description>
                     <![CDATA[
                      Coccidiodes immitis (RS) genomic annotations. Source: The Broad Institute.
                      ]]>
                </description>
            </info>
  </resource>


  <!-- dbEST -->
  <resource resource="coccidiodes_immitis_rs_dbEST_RSRC" version="@@coccidiodes_immitis_rs_dbEST_VER@@"
                                                          plugin="GUS::Supported::Plugin::dbEST">
    <manualGet fileOrDir="global/empty"/>
    <unpack>getSubTaxa --ncbiTaxId @@coccidiodes_immitis_rs_NCBI_TAXON_ID@@ --outputFile @@dataDir@@/taxonIdFile</unpack>
    <unpack>createPropFile --file  @@dataDir@@/dbest.prop --propList "dbestLogin:@@dbestLogin@@,dbestPswd:@@dbestPswd@@"</unpack>
    <pluginArgs>--span 500 
                --taxonFile @@dataDir@@/taxonIdFile 
                --extDbName %RESOURCE_NAME% 
                --extDbRlsVer %RESOURCE_VERSION%
                --soVer @@SO_VER@@
                --dbestLoginFile @@dataDir@@/dbest.prop 
                --dbestConnect @@dbestConnect@@
    </pluginArgs>

    <info
        displayName="Coccidiodes immitis (RS) dbEST ESTs"
        project="FungiDB"
        organisms="@@coccidiodes_immitis_rs_ORGANISM_FULL_NAME@@"
        category="Transcriptome"
        publicUrl="http://www.ncbi.nlm.nih.gov/dbEST/"
        contact=""
        email=""
        institution="">
      <description>
        <![CDATA[
         Coccidiodes immitis ESTs from dbEST.
        ]]>
      </description>
    </info>
  </resource>



</resources>
