<!-- Aspergillus nidulans (A4) Resources -->

<resources>

  <!-- ISF FASTA resource -->
  <resource
        resource="aspergillus_nidulans_a4_genome_sequence_RSRC"
        version="@@aspergillus_nidulans_a4_GENOME_SEQUENCE_VER@@"
        plugin="GUS::Supported::Plugin::LoadFastaSequences">
        <manualGet 
              fileOrDir="FungiDB/aspergillus_nidulans_a4/genome/%RESOURCE_VERSION%/aspergillus_nidulans_a4.gff3"/>
        <!-- Unnecessary 
        <unpack>
              mkdir @@dataDir@@/fasta
        </unpack>
        -->
        <!-- Arg isn't input_file_or_dir but only input_dir (which can also be a file) -->

        <!-- Standardize scaffold IDs by prefixing -->
<!--
        <unpack>
               fungidb_uniquify_and_standardize_seqids.pl
                   --input  @@dataDir@@/aspergillus_nidulans_a4.gff3
                   --output @@dataDir@@/aspergillus_nidulans_a4.uniquified.gff3
                   --prefix @@aspergillus_nidulans_a4_ORGANISM_ABBREVIATION@@
        </unpack>
-->

        <!-- Split FASTA from GFF -->
        <unpack>
             makeCustomFastaAndGffFromGff3
                  --input_dir @@dataDir@@/aspergillus_nidulans_a4.uniquified.gff3
                  --inputFileExt gff3
                  --output_fasta @@dataDir@@/aspergillus_nidulans_a4.unpacked.fasta
                  --output_gff   @@dataDir@@/aspergillus_nidulans_a4.unpacked.gff3
        </unpack>

        <!-- There may not be a taxonomy ID for some organisms; Others don't seem to be present in the taxonomy -->
        <pluginArgs>
             --externalDatabaseName %RESOURCE_NAME%
             --ncbiTaxId 227321
             --externalDatabaseVersion %RESOURCE_VERSION%
             --sequenceFile @@dataDir@@/aspergillus_nidulans_a4.unpacked.fasta
             --SOTermName 'chromosome' 
             --regexSourceId  '>(\S+)'
             --tableName "DoTS::ExternalNASequence"
             --regexChromosome '\d+\.(\d+)'
         </pluginArgs>

         <info
             displayName="Aspergillus nidulans (A4) genomic sequence"
             project="FungiDB"
             organisms="@@aspergillus_nidulans_a4_ORGANISM_FULL_NAME@@"
             category="Genome"
             publicUrl="http://www.broadinstitute.org/annotation/genome/aspergillus_group/MultiDownloads.html"
             contact=""
             email=""
             institution="Broad">
             <description>
                 <![CDATA[
                  Aspergillus nidulans (A4) genomic sequence. Source: The Broad Institute.
             ]]>
             </description>
         </info>
  </resource>


  <!-- ISF genomic annotations resource -->
  <resource
         resource="aspergillus_nidulans_a4_genome_annotations_RSRC"
         version="@@aspergillus_nidulans_a4_VER@@" 
         parentResource="aspergillus_nidulans_a4_genome_sequence_RSRC"
         plugin="GUS::Supported::Plugin::InsertSequenceFeatures">

         <manualGet fileOrDir="FungiDB/aspergillus_nidulans_a4/genome/%RESOURCE_VERSION%/aspergillus_nidulans_a4.unpacked.gff3" />

         <!-- Standardize scaffold IDs by prefixing -->
<!--
         <unpack>
                fungidb_uniquify_and_standardize_seqids.pl
                --input  @@dataDir@@/aspergillus_nidulans_a4_transcripts.gff3
                --output @@dataDir@@/aspergillus_nidulans_a4.uniquified.gff3
                --prefix @@aspergillus_nidulans_a4_ORGANISM_ABBREVIATION@@
          </unpack>


         <!-- Run the standard ISF preprocess step -->
         <unpack>
               preprocessGFF3 
                   --input_gff  @@dataDir@@/aspergillus_nidulans_a4.unpacked.gff3
                   --output_gff @@dataDir@@/aspergillus_nidulans_a4.transformed.gff3
         </unpack>
-->

         <pluginArgs>
                --extDbName      %PARENT_RESOURCE_NAME%
                --extDbRlsVer    %PARENT_RESOURCE_VERSION%
                --mapFile        @@gusHome@@/lib/xml/isf/FungiDB/sgdGFF32Gus.xml
                --inputFileOrDir @@dataDir@@/aspergillus_nidulans_a4.transformed.gff3
                --inputFileExtension "gff3"
                --fileFormat     gff3
                --soCvsVersion   @@SO_VER@@
                --defaultOrganism   "Aspergillus nidulans A4"
                --seqSoTerm         "chromosome"
                --validationLog     @@dataDir@@/validation.log
                --bioperlTreeOutput @@dataDir@@/bioperlTree.out
                --seqIdColumn source_id
                --naSequenceSubclass ExternalNASequence
          </pluginArgs>

          <info
             displayName="Aspergillus nidulans (A4) genomic annotations"
             project="FungiDB"
             organisms="@@aspergillus_nidulans_a4_ORGANISM_FULL_NAME@@"
             category="Genome"
             publicUrl="http://www.broadinstitute.org/annotation/genome/aspergillus_group/MultiDownloads.html"
             contact=""
             email=""
             institution="Broad">
             <description>
               <![CDATA[
                    Aspergillus nidulans (A4) genomic annotations. Source: The Broad Institute.
                ]]>
            </description>
          </info>
     </resource>

 <!-- //////////////////////
           ALIASES
       ////////////////////// -->

  <resource resource="aspergillus_nidulans_a4_aspdb_primary_gene_aliases_RSRC" 
            version="@@aspergillus_nidulans_a4_aspdb_VER@@"
            plugin="ApiCommonData::Load::Plugin::InsertNaFeatureNaGene">
 
    <manualGet fileOrDir="FungiDB/aspergillus_nidulans_a4_aspdb/genome/%RESOURCE_VERSION%/primary_gene_aliases.tab"/>
    <pluginArgs>--MappingFile @@dataDir@@/primary_gene_aliases.tab</pluginArgs>
    <info
        displayName="Mapping of FungiDB IDs to original gene names."
        project="FungiDB"
        organisms="@@aspergillus_nidulans_a4_aspdb_ORGANISM_FULL_NAME@@"
        category="ignore"
        publicUrl=""
        contact=""
        email=""
        institution="">
      <description>
        <![CDATA[
         
        ]]>
      </description>
    </info>
  </resource>


  <!-- GO annotations resource -->
  <resource 
         resource="aspergillus_nidulans_a4_go_associations_RSRC"
         version="@@aspergillus_nidulans_a4_VER@@"
         plugin="ApiCommonData::Load::Plugin::InsertGOAssociationsSimple">
    
         <manualGet 
              fileOrDir="FungiDB/aspergillus_nidulans_a4/gene_ontology/@@aspergillus_nidulans_a4_VER@@/gene_association.sgd" />
 
         <pluginArgs>
               --externalDatabaseSpec "%RESOURCE_NAME%|%RESOURCE_VERSION%"
               --inputFile @@dataDir@@/gene_association.sgd
               --goExternalDatabaseSpec "GO_RSRC|@@GO_VER@@"
               --seqIdSql "SELECT g.source_id, taf.aa_sequence_id FROM dots.genefeature g, dots.transcript t, dots.translatedAAFeature taf WHERE g.na_feature_id = t.parent_id AND t.na_feature_id = taf.na_feature_id UNION SELECT taf.source_id, taf.aa_sequence_id FROM dots.translatedAAFeature taf"
              --targetTable "DoTS::TranslatedAASequence"
              --lineOfEvidence "SGD"
              --inputIdColumn id
              --tolerateMissingSeqs
              --skipBadGOTerms @@dataDir@@/badGOTerms.log
         </pluginArgs>

         <info
              displayName="Aspergillus nidulans (A4) GO associations"
              project="FungiDB"
              organisms="@@aspergillus_nidulans_a4_ORGANISM_FULL_NAME@@"
              category="Proteome"
              publicUrl="http://downloads.yeastgenome.org/literature_curation/gene_association.sgd.gz"
              contact=""
              email=""
              institution="">
              <description>
                 <![CDATA[
                     Aspergillus nidulans (A4) GO associations"                     
                 ]]>
              </description>
          </info>
   </resource>

   
   <!-- EC numbers -->
   <resource
          resource="aspergillus_nidulans_a4_ec_ids_RSRC" 
          version="@@aspergillus_nidulans_a4_VER@@"
      plugin="GUS::Community::Plugin::InsertECMapping">
  
    <manualGet fileOrDir="FungiDB/aspergillus_nidulans_a4/xrefs/%RESOURCE_VERSION%" />
    <unpack>
          fungidb_unpack_sgd_ids.pl
              --input @@dataDir@@/dbxref.tab
              --output @@dataDir@@/ec_numbers.tab
              --db IUBMB
              --type "EC number"
    </unpack>

    <pluginArgs>
          --ECMappingFile @@dataDir@@/ec_numbers.tab
          --evidenceCode "SGD"
          --aaSeqLocusTagMappingSql "SELECT aa_sequence_id FROM dots.GeneFeature g, dots.Transcript t, dots.TranslatedAAFeature taf WHERE g.source_id = ? AND g.na_feature_id = t.parent_id AND t.na_feature_id = taf.na_feature_id"
    </pluginArgs>
    
    <info
        displayName="Aspergillus nidulans (A4) EC IDs"
        project="FungiDB"
        organisms="@@aspergillus_nidulans_a4_ORGANISM_FULL_NAME@@"
        category="Proteome"
        publicUrl=""
        contact=""
        email=""
        institution="">
      <description>
        <![CDATA[
           Aspergillus nidulans (A4) EC IDs
        ]]>
      </description>
    </info>
  </resource>

</resources>




