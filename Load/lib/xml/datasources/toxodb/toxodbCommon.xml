<resources>

  <!-- OldName: ToxoIsolatesFromGenbank   OldVersion: 2009-10-09 -->

  <resource resource="toxoIsolatesFromGenbank_RSRC" version="@@toxoIsolatesFromGenbank_VER@@"
      plugin="GUS::Supported::Plugin::InsertSequenceFeatures"
      internalDescrip="Toxoplasma isolates From Genbank">
    <manualGet fileOrDir="ToxoDB/common/isolate/ToxoIsolatesFromGenbank/@@toxoIsolatesFromGenbank_VER@@/sequences.gb"/>
    <unpack>fixIsolateSequences --seq_file @@dataDir@@/fromProvider/sequences.gb --fixed_seq_file @@dataDir@@/sequences_fixed.gb --removed_seq_file @@dataDir@@/sequences_excluded.gb</unpack>
    <unpack>sed "s/plastid Toxoplasma gondii/Toxoplasma gondii/g" @@dataDir@@/sequences_fixed.gb | sed "s/apicoplast Neospora caninum/Neospora caninum/g" | sed "s/mitochondrion Toxoplasma gondii/Toxoplasma gondii/g" | sed "s/plastid Neospora caninum/Neospora caninum/g" > @@dataDir@@/sequences_fixed.gb.1</unpack>
    <pluginArgs>--extDbName %RESOURCE_NAME% --extDbRlsVer %RESOURCE_VER% --mapFile @@gusHome@@/lib/xml/isf/GenbankIsolates2gus.xml --inputFileOrDir @@dataDir@@/sequences_fixed.gb.1 --fileFormat genbank --soCvsVersion @@SO_VER@@ --defaultOrganism "Toxoplasma gondii"  --seqSoTerm "region" --bioperlTreeOutput @@dataDir@@/bioperlTree.out</pluginArgs>
    <info
        displayName="T. gondii and N. caninum isolates from Genbank"
        project="ToxoDB"
        organism="Toxoplasma"
        category="Genome"
        publicUrl=""
        contact="GenBank"
        email="info@ncbi.nlm.nih.gov"
        institution="NCBI">
      <description>
        <![CDATA[
<i>Toxoplasma gondii</i> and <i>Neospora caninum</i> isolate data was obtained from Genbank.
        ]]>
      </description>
    </info>
  </resource>


