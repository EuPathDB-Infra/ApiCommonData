    <pluginArgs>--externalDatabaseName %RESOURCE_NAME% --externalDatabaseVersion %RESOURCE_VER% --ncbiTaxId 5811 --sequenceFile @@dataDir@@/isolates_fixed.fasta --soTermName "region" --regexSourceId "^>(\S+)" --tableName "DoTS::ExternalNASequence"</pluginArgs>
