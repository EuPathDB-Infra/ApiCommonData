<resources>
<!--ISFResource-->
<resource resource="Ltarentolae_contigs_RSRC" version="@@Ltarentolae_contigs_VER@@"
        displayName="L. tarentolae contig sequences from Marc Ouellette"
        category="Genome"
        plugin="GUS::Supported::Plugin::LoadFastaSequences"
        extDbName="L. tarentolae contig sequences"
        extDbRlsVer="2009-04-07"
        extDbRlsDescrip="L. tarentolae contig sequences|2009-04-07"
        dbCommit="@dbcommit@">
        <manualGet fileOrDir = "/files/cbil/data/cbil/TrypDB/manualDelivery/Sequence/Tarentolae/4-7-09/L_tarentolae_dna_r1596.fasta"/>
	<unpack>mkdir @downloadDir@/Ltarentolae_contigs_fixed</unpack>
	<unpack><![CDATA[cat @downloadDir@/Ltarentolae_contigs/L_tarentolae_dna_r1596.fasta|perl -e 'while(<>){s/^>/>r1596\./;print $_;}' >@downloadDir@/Ltarentolae_contigs_fixed/L_tarentolae_dna_r1596_fixed.fasta]]></unpack>
        <pluginArgs>--externalDatabaseName %EXT_DB_NAME% --externalDatabaseVersion %EXT_DB_RLS_VER% --ncbiTaxId 5689 --sequenceFile @downloadDir@/Ltarentolae_contigs_fixed/L_tarentolae_dna_r1596_fixed.fasta --soTermName "contig" --regexSourceId ">(\S+)" --tableName "DoTS::ExternalNASequence"</pluginArgs>
        <description>
            <![CDATA[
Chromosome sequence for Leishmania tarentolae is provided by  the CIHR Group on host pathogen interactions (Marc Ouellette, Jacques Corbeil, Barbara Papadopoulou, Michel J. Tremblay, Fr&#233;d&#233;ric Raymond, S&#233;bastien Boisvert from Universit&#233; Laval, and Martin Olivier from McGill University). The CIHR group plans on publishing the completed and annotated sequences in a peer-reviewed journal as soon as possible. Permission  should be obtained from Marc Ouellette before publishing analyses of the  sequence/open reading frames/genes on a chromosome or genome scale.
          ]]>
        </description>
    </resource>

<!--ESTResource-->

  <resource resource="Ltarentolae_dbEST_RSRC" version="@@Ltarentolae_dbEST_VER@@"
      plugin="GUS::Supported::Plugin::dbEST">
    <manualGet fileOrDir="global/empty"/>
    <unpack>getSubTaxa --ncbiTaxId 5689 --outputFile @@dataDir@@/taxonIdFile</unpack>
    <unpack>createPropFile --file @@dataDir@@/dbest.prop --propList "dbestLogin:@@dbestLogin@@,dbestPswd:@@dbestPswd@@"</unpack>
    <pluginArgs>--span 500 --taxonFile @@dataDir@@/taxonIdFile --extDbName %RESOURCE_NAME% --extDbRlsVer %RESOURCE_VERSION% --soVer @@SO_VER@@ --dbestLoginFile @@dataDir@@/dbest.prop --dbestConnect @@dbestConnect@@ </pluginArgs>
    <info
        displayName="TriTryp dbEST ESTs"
        project="TriTrypDB"
        organisms="@@LtarentolaeFullName@@"
        category="Transcriptome"
        publicUrl="http://www.ncbi.nlm.nih.gov/dbEST/"
        contact=""
        email=""
        institution="">
      <description>
        <![CDATA[
         TriTryp ESTs from dbEST.
        ]]>
      </description>
    </info>
  </resource>


</resources>
