<resources>

  <resource resource="OrthoMCL_Phyletic_RSRC" version="5"
      plugin="ApiCommonData::Load::Plugin::InsertPhylogeneticProfile">
    <manualGet fileOrDir="PiroplasmaDB/common/orthology/orthoMCL/%RESOURCE_VERSION%/orthomclGroups.txt"/>
    <pluginArgs>--groupsFile @@dataDir@@/orthomclGroups.txt --taxaToLoad "bbov,tann,tpar"</pluginArgs>

  </resource>

  <resource resource="OrthoMCL_RSRC" version="5"
      plugin="ApiCommonData::Load::Plugin::InsertOrthologousGroups">
    <manualGet fileOrDir="PiroplasmaDB/common/orthology/orthoMCL/%RESOURCE_VERSION%/orthomclGroups.txt"/>
    <pluginArgs>--OrthologFile @@dataDir@@/orthomclGroups.txt --AnalysisName 'OrthoMCL-based Orthology Predictions' --AnalysisDescription 'OrthoMCL-based Orthology Predictions'  --taxaToLoad "bbov,tann,tpar" --ElementResultTable "DoTS::GeneFeature"</pluginArgs>
  </resource>

  <resource resource="OrthoMCLTree_RSRC" version="5"
      plugin="ApiCommonData::Load::Plugin::InsertOrthomclTaxon">
    <manualGet fileOrDir="PiroplasmaDB/common/orthology/orthoMCL/%RESOURCE_VERSION%/orthomclClades.txt"/>
    <pluginArgs>--cladeFile @@dataDir@@/%RESOURCE_VERSION%/orthomclClades.txt --speciesFile @@dataDir@@/%RESOURCE_VERSION%/orthomclTaxons.txt </pluginArgs>
  </resource>


</resources>
