use lib "$ENV{GUS_HOME}/lib/perl";
use FgpUtil::Util::CommandHelper;

my $GUS_HOME = $ENV{GUS_HOME};
my $CLASSPATH = &FgpUtil::Util::CommandHelper::getJavaClasspath($GUS_HOME);
my $sysProps = &FgpUtil::Util::CommandHelper::getSystemProps($GUS_HOME, 'validateResourceXml');
if ($ARGV[0] != /^\//) {
  $ARGV[0] = "$ENV{PWD}/$ARGV[0]";
}
my $args = &FgpUtil::Util::CommandHelper::getJavaArgs(@ARGV);

my $cmd = "java $sysProps -classpath $CLASSPATH org.apidb.dataload.ResourceXmlValidator $args";

system($cmd);
