#!/usr/bin/perl
use strict;

use lib "$ENV{GUS_HOME}/lib/perl";

use Getopt::Long;
use Data::Dumper;
use List::Util qw(sum);

my ($outputFile,$inputFile,$verbose, $allowedMismatches);
&GetOptions("inputFile=s" => \$inputFile,
	    "allowedMismatches=s" => \$allowedMismatches,
            "verbose!" => \$verbose,
            "outputFile=s" => \$outputFile);

my %featureHash;

open (TABFILE, "$inputFile") or die "Cannot open file for reading:  $!";;

while (<TABFILE>){
  chomp;
  next if /^#/; 
  my @arr = split(/\t/, $_);
  $featureHash{"$arr[0]\t$arr[1]\t$arr[2]"}=1;
}

close(TABFILE);

open(OUT, "> $outputFile") or die "Cannot open file for writing:  $!";
foreach my $k (keys %featureHash){
    my @arr = split(/\t/, $k);
    my ($start,$end) = split (/-/,$arr[2]);
    my $trand=$arr[3];
    my $mismatches=$arr[4];
    print OUT "$arr[1]\tProbe_Mappings\tProbes\t$start\t$end\t.\t$trand\t.\tID \"$arr[0]_$arr[1]_$arr[2]\"\n" if ($allowedMismatches >= $mismatches);
}

close(OUT);


