#!/usr/bin/perl
use strict;

use lib "$ENV{GUS_HOME}/lib/perl";

use Getopt::Long;
use Data::Dumper;
use List::Util qw(sum);

my ($outputFile,$inputFile,$verbose, $allowedMismatches);
&GetOptions("inputFile=s" => \$inputFile,
	    "allowedMismatches=s" => \$allowedMismatches,
            "verbose!" => \$verbose,
            "outputFile=s" => \$outputFile);

my %featureHash;

open (TABFILE, "$inputFile") or die "Cannot open file for reading:  $!";;

while (<TABFILE>){
  chomp;
  next if /^#/; 
  my @arr = split(/\t/, $_);
  $featureHash{"$arr[0]\t$arr[1]\t$arr[2]\t$arr[4]"}=1;
}

close(TABFILE);

open(OUT, "> $outputFile") or die "Cannot open file for writing:  $!";
foreach my $k (keys %featureHash){
    my ($probeId, $genomeId, $locations,$mismatches) = split(/\t/, $k);
    my @exons = split (/,/,$locations) ;
    map(s/\s//g,@exons) ;
    my $exonOrder=0;
    foreach (@exons) {
	my ($start,$end) = split (/-/,$_);
	$exonOrder++;
	print OUT "$genomeId\tProbe_Mappings\tProbes\t$start\t$end\t.\t+\t.\tID \"$probeId\"ExonOrder \"$exonOrder\"\n" if ($allowedMismatches >= $mismatches);
    }

}

close(OUT);


