
#!/usr/bin/perl

use strict;

my ($database, $inputFile);

GetOptions("database:s" => \$database,
           "inputFile:s" => \$inputFile,
	  );

unless ($database && $path) {
  die "USAGE: manageManateeData --database <STRING> --inputFile <STRING>";
}

system('mysql -u root -e "DROP DATABASE $database"')
system('mysql -u root -e "CREATE DATABASE $database"')
system("mysql $database -u root < $inputFile")

