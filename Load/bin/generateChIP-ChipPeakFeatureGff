#!/usr/bin/perl

use strict;

use lib "$ENV{GUS_HOME}/lib/perl";

use Getopt::Long;
use Data::Dumper;
use List::Util qw(sum);

my ($outputFile,$inputFile,$verbose, $sampleName);
&GetOptions("inputFile=s" => \$inputFile,
            "verbose!" => \$verbose,
            "sampleName=s" => \$sampleName,
            "outputFile=s" => \$outputFile);

my %featureHash;

open (TABFILE, "$inputFile") or die "Cannot open file for reading:  $!";;

while (<TABFILE>){
  chomp;
  next if /^#/; 
  my @arr = split(/\t/, $_);
  $featureHash{"$arr[0]\t$arr[1]\t$arr[2]"}=1;
}

close(TABFILE);

open(OUT, "> $outputFile") or die "Cannot open file for writing:  $!";
foreach my $k (keys %featureHash){
    my @arr = split(/\t/, $k);
    print OUT "$arr[0]\tChIP_PEAKS\tPEAKS\t$arr[1]\t$arr[2]\t.\t+\t.\tID \"$arr[0]_$arr[1]_$arr[2]-$sampleName\";IS_PREDICTED \"0\"\n";
}

close(OUT);


